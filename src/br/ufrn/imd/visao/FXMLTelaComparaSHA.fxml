<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="500.0" minWidth="500.0" styleClass="tela-comparasha-border" stylesheets="@TelaComparaSHAStyle.css" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/" fx:controller="br.ufrn.imd.controle.TelaComparaSHAController">
   <top>
      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" styleClass="webscrap-logo" BorderPane.alignment="CENTER">
         <image>
            <Image url="@../../../../../img/fakeNewsLogo.png" />
         </image>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </ImageView>
   </top>
   <center>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="24.0" text="Tudo pronto, dataset carregado, noticia carregada... &#10;Chegou a hora de comparar!" textAlignment="CENTER">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <Label layoutX="20.0" layoutY="54.0" text="Primeiramente vamos procurar o SHA da noticia.&#10;Será que ele possui SHA compativel com algum item do dataset?" textAlignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="labelSHA" layoutX="86.0" layoutY="124.0" text="  " visible="false">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <Label layoutX="186.0" layoutY="105.0" text="SHA da sua noticia:" />
            <Button fx:id="btBuscarSHA" layoutX="212.0" layoutY="155.0" mnemonicParsing="false" onAction="#clicarBtBuscarSHA" text="Buscar..." />
            <Label fx:id="compatibleSHA" layoutX="36.0" layoutY="204.0" text="O SHA da noticia foi encontrado no dataset, &#10;logo ela é uma FAKE NEW!!!" textAlignment="CENTER" textFill="RED" visible="false">
               <font>
                  <Font name="System Bold Italic" size="17.0" />
               </font>
            </Label>
            <Button fx:id="voltarParaWebscraper" layoutX="171.0" layoutY="255.0" mnemonicParsing="false" text="Testar outra noticia..." visible="false" />
            <Label fx:id="nonCompatibleSHA" layoutX="4.0" layoutY="205.0" text="O SHA da noticia  nao foi encontrado no dataset, &#10;sera necessario realizar uma analise de similaridade..." textAlignment="CENTER" textFill="#004a21" visible="false">
               <font>
                  <Font name="System Bold Italic" size="16.0" />
               </font>
            </Label>
            <Button fx:id="btStartSimilaridade" onAction="#initTelaSimilaridade" layoutX="166.0" layoutY="255.0" mnemonicParsing="false" text="Analisar similaridade..." visible="false" />
         </children>
      </Pane>
   </center>
</BorderPane>
